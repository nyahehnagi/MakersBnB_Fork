
<% if @customer %>
  <h1>Welcome, <%= @customer.name %></h1>
<% end %>

<ul>
<% @spaces.each do |space| %>
  <li>
    <%= space.name %>
    <%= space.description %>
    <%= space.price.to_f %>
    <%= space.owner_customer_id %>
  </li>
  <% end %>
</ul>

<% if @customer %>
  <form action="/sessions/delete" method="post">
    <input type="submit" value="Sign out" />
  </form>
<% end %>